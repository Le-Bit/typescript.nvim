{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/vscode-typescript-to-lua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["node", "typescript-to-lua/language-extensions"],
    "strict": true
  },
  "tstl": {
    "luaTarget": "JIT",
    "luaBundle": "./lua/typescript.lua",
    "luaBundleEntry": "./src/index.ts",
    "noResolvePaths": ["lspconfig"],
    "noImplicitSelf": true
  }
}
